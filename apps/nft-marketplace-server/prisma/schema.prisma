datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  amount    Float?
  buyer     String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  nft       Nft?     @relation(fields: [nftId], references: [id])
  nftId     String?
  updatedAt DateTime @updatedAt
}

model Collection {
  createdAt   DateTime @default(now())
  creator     String?
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model Nft {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  image        Json?
  owner        String?
  title        String?
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
